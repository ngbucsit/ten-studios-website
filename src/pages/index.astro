---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Ten Studios">
    <main>
        <div class="hero">
            <picture>
                <source
                    srcset="/src/images/TS_Alternative_Logo_A_Black.svg"
                    media="(min-width: 600px)"
                />
                <img src="/src/images/TS_Primary_Logo_A_Black.svg" />
            </picture>
        </div>
    </main>
</Layout>

<style>
    main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .hero {
        flex: 1 1 auto;
        width: 100%;
        display: flex;
        height: auto;
        padding: 10rem 0;
        justify-content: center;
        align-items: center;
    }
    .hero picture {
        width: 60%;
    }
    .hero picture img {
        width: 100%;
        -moz-user-select: none;
        -webkit-user-select: none;
        user-select: none;
        pointer-events: none;
    }
    @media (max-width: 600px) {
        .hero {
            padding: 5rem;
        }
    }
</style>
