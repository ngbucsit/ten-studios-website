---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Ten Studios">
    <main>
        <div class="hero">
            <img src="../../public/TS_Alternative Logo A_Black.svg" />
        </div>
    </main>
</Layout>

<style>
    main {
        margin: 0 auto;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: black;
        font-size: 20px;
        line-height: 1.6;
    }
    .hero {
        height: 100vh;
        display: flex;
        flex-flow: column;
    }
    .hero img {
        flex: 1 0 0;
        pointer-events: none;
    }
</style>
